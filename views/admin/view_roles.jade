html
  head
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous", rel="stylesheet")
    style.
      .table {
        font-size: 10px;
      }
      .dataTables_filter, .dataTables_info{
        display: none;
      }
      .DTFC_LeftBodyLiner {
        top: 0px !important;
        width: 112px !important;
      }

  body
    table.table.table-striped.table-bordered.table-hover
      thead
        tr.active.table-header
          th ФИО\РОЛЬ
          each role in roles
            th #{role.title}
      tbody
        each manager, num in managers
          - var even = num % 2 ? 'even' : '';
          tr(height="40" class="#{even}")
            td.manager-fio(align="center") #{manager.fio}
            each r in roles
              each role, val in manager.fetchRole
                if (r.role == val)
                  if (role == 1)
                    td.success(align="center" title="#{manager.fio}") &#10004;
                  else
                    td(title="#{manager.fio}")

    script(src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")
    link(rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/fc-3.2.3/fh-3.1.3/datatables.min.css")
    script(type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.16/fc-3.2.3/fh-3.1.3/datatables.min.js")
    script.
      $(document).ready( function () {
        $('table').dataTable( {
          buttons: [],
          scrollY: "500px",
          scrollX: true,
          scrollCollapse: true,
          paging: false,
          fixedColumns: true
        });
      });
